<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/item_outer_padding" >

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="@dimen/bottom_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/bottom_margin_left"
        android:background="@drawable/bottom_border"
        android:gravity="left|center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/trash" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/hover_margin_left"
        android:background="@drawable/hover_background"
        android:orientation="vertical"
        android:paddingLeft="@dimen/item_padding_left" >

        <ImageView
            android:layout_width="@dimen/item_upload_width"
            android:layout_height="@dimen/item_upload_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@null"
            android:src="@drawable/icon_upload" />

        <com.zhan_dui.custom.MinusTextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="@dimen/content_padding_right"
            android:paddingRight="@dimen/content_padding_left"
            android:paddingTop="@dimen/item_text_padding_top"
            android:textColor="@color/content_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/grid_date_height"
            android:layout_alignParentBottom="true"
            android:gravity="center|right"
            android:paddingRight="@dimen/item_time_padding_right"
            android:text="@null"
            android:textColor="@color/grid_date_color"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>